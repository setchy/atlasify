{
  "name": "atlassify",
  "version": "1.1.0",
  "description": "Atlassian notifications on your menu bar.",
  "main": "src/electron/main.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "clean": "rimraf build coverage node_modules",
    "watch": "webpack --config webpack.common.js --watch",
    "make:linux": "electron-builder --linux",
    "make:macos": "electron-builder --mac --universal",
    "make:win": "electron-builder --win",
    "lint:check": "biome check",
    "lint": "biome check --fix",
    "test": "jest",
    "start": "electron . --enable-logging",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/setchy/atlassify.git"
  },
  "keywords": [
    "atlassify",
    "atlassian",
    "bitbucket",
    "confluence",
    "compass",
    "jira",
    "trello",
    "notifier",
    "notifications",
    "electron",
    "atom",
    "shell",
    "app",
    "tray"
  ],
  "author": {
    "name": "Adam Setch",
    "url": "https://github.com/setchy"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/setchy/atlassify/issues"
  },
  "homepage": "https://www.atlassify.io/",
  "build": {
    "appId": "com.electron.atlassify",
    "productName": "Atlassify",
    "copyright": "Copyright Â© 2024 Adam Setch",
    "files": ["build/**/*", "assets/**/*", "src/electron/*", "LICENSE"],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/app-icon.icns",
      "identity": "Adam Setch (5KD23H9729)",
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "publish": ["github"],
      "extendInfo": {
        "NSBluetoothAlwaysUsageDescription": null,
        "NSBluetoothPeripheralUsageDescription": null,
        "NSCameraUsageDescription": null,
        "NSMicrophoneUsageDescription": null
      }
    },
    "dmg": {
      "sign": false,
      "icon": "assets/images/app-icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/app-icon.ico"
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "category": "Productivity",
      "maintainer": "Adam Setch"
    },
    "afterSign": "scripts/notarize.js"
  },
  "dependencies": {
    "@discordapp/twemoji": "15.1.0",
    "axios": "1.7.7",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "electron-log": "5.2.0",
    "electron-updater": "6.3.4",
    "menubar": "9.5.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.26.2",
    "tailwind-merge": "2.5.2",
    "ts-loader": "9.5.1",
    "typescript": "5.6.2",
    "update-electron-app": "3.0.0"
  },
  "devDependencies": {
    "@atlaskit/avatar": "21.15.2",
    "@atlaskit/badge": "16.4.1",
    "@atlaskit/button": "20.2.0",
    "@atlaskit/checkbox": "14.0.1",
    "@atlaskit/css-reset": "6.11.0",
    "@atlaskit/form": "10.5.3",
    "@atlaskit/heading": "2.4.5",
    "@atlaskit/icon": "22.18.1",
    "@atlaskit/inline-message": "12.3.3",
    "@atlaskit/logo": "14.3.0",
    "@atlaskit/modal-dialog": "12.17.1",
    "@atlaskit/primitives": "12.2.0",
    "@atlaskit/radio": "6.5.1",
    "@atlaskit/spinner": "16.3.1",
    "@atlaskit/textfield": "6.5.1",
    "@atlaskit/toggle": "13.4.1",
    "@atlaskit/tokens": "1.61.0",
    "@atlaskit/tooltip": "18.7.2",
    "@biomejs/biome": "1.9.2",
    "@electron/notarize": "2.5.0",
    "@testing-library/react": "16.0.1",
    "@types/jest": "29.5.13",
    "@types/node": "20.16.9",
    "@types/react": "18.3.9",
    "@types/react-router-dom": "5.3.3",
    "autoprefixer": "10.4.20",
    "css-loader": "7.1.2",
    "electron": "32.1.2",
    "electron-builder": "25.0.5",
    "graphql-tag": "2.12.6",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "nock": "13.5.5",
    "postcss": "8.4.47",
    "postcss-loader": "8.1.1",
    "resize-observer-polyfill": "1.5.1",
    "rimraf": "6.0.1",
    "style-loader": "4.0.0",
    "tailwindcss": "3.4.13",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "webpack": "5.95.0",
    "webpack-cli": "5.1.4",
    "webpack-merge": "6.0.1"
  },
  "packageManager": "pnpm@9.11.0",
  "lint-staged": {
    "*": "biome check --fix --no-errors-on-unmatched",
    "*.{js,ts,tsx}": "pnpm test -- --findRelatedTests -u --passWithNoTests"
  }
}
